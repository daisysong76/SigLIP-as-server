{
  "server": {
    "host": "localhost",
    "port": 9000,
    "debug": true,
    "workers": 2,
    "timeout": 30
  },
  "models": [
    {
      "name": "openai/clip-vit-large-patch14",
      "device": "cuda:0",
      "batch_size": 16,
      "max_batch_size": 32,
      "cache_embeddings": true,
      "cache_dir": "/tmp/clip-service/cache/large",
      "parameters": {
        "pretrained": "webli",
        "initial_batch_size": 1,
        "image_size": 336,
        "normalize": true
      }
    },
    {
      "name": "openai/clip-vit-base-patch32",
      "device": "cuda:1",
      "batch_size": 32,
      "max_batch_size": 64,
      "parameters": {
        "pretrained": "openai",
        "initial_batch_size": 2,
        "image_size": 224,
        "normalize": true
      }
    }
  ],
  "logging": {
    "level": "DEBUG",
    "file": "/var/log/clip-service/debug.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
} 