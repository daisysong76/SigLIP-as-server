{
  "server": {
    "host": "0.0.0.0",
    "port": 8000,
    "debug": false,
    "workers": 4,
    "timeout": 60
  },
  "model": {
    "name": "SigLIP",
    "device": "cuda",
    "batch_size": 32,
    "max_batch_size": 64,
    "cache_embeddings": true,
    "cache_dir": "/tmp/clip-service/cache",
    "parameters": {
      "pretrained": "webli",
      "initial_batch_size": 2,
      "image_size": 224,
      "normalize": true
    }
  },
  "logging": {
    "level": "INFO",
    "file": "/var/log/clip-service.log",
    "format": "%(asctime)s - %(name)s - %(levelname)s - %(message)s"
  }
} 